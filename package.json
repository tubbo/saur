{
  "name": "saur",
  "version": "0.0.1",
  "license": "MIT",
  "devDependencies": {
    "@babel/plugin-syntax-top-level-await": "^7.8.3",
    "babel-eslint": "^10.1.0",
    "esdoc": "^1.1.0",
    "esdoc-ecmascript-proposal-plugin": "^1.0.0",
    "esdoc-standard-plugin": "^1.0.0",
    "eslint": "^6.8.0",
    "eslint-plugin-prettier": "^3.1.3",
    "prettier": "^2.0.4",
    "webpack": "^4.42.1"
  },
  "babel": {
    "plugins": ["@babel/plugin-syntax-top-level-await"]
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "parserOptions": {
      "babelOptions": {
        "plugins": ["@babel/plugin-syntax-top-level-await"],
        "allowAwaitOutsideFunction": true
      }
    },
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error"
    },
    "globals": {
      "Deno": true,
      "window": true,
      "globalThis": true,
      "console": true,
      "TextEncoder": true,
      "TextDecoder": true
    }
  },
  "prettier": {
    "proseWrap": "always",
    "trailingComma": "all"
  },
  "scripts": {
    "lint": "eslint .",
    "pretty": "prettier"
  }
}
